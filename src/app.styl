.app
  position: relative
  overflow: hidden

.bg-image
  background-image: url(./img/bg.jpg)
  background-repeat: no-repeat
  background-position: center center

.bg
  @extend .bg-image
  position: absolute
  z-index: 0
  opacity: 0.5
  background-size: 100% 100%
  width: 100%
  height: 100%

.wrapper
  position: absolute
  z-index: 1
  width: 100%
  height: 100%
  display: flex
  flex-wrap: wrap

.tile
  @extend .bg-image
  position: relative
  overflow: hidden
  opacity: 0.7
  border: 2px solid white

.tile-id
  position: absolute
  top: 3px
  left: 3px
  background: #FFF
  border-radius: 5px
  display: flex
  align-items: center
  justify-content: center
  width: 18px
  height: 18px
  font-size: 14px
